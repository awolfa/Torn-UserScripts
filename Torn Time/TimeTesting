// ==UserScript==
// @name         EST & GMT Time Zone
// @namespace    http://tampermonkey.net/
// @version      0.5
// @description  Add TCT to all pages
// @author       Red Rabbit [2203961]
// @match        https://www.torn.com/*
// @grant        GM_addStyle
// Special Thanks to xedx for helping me with coding in general
// ==/UserScript==

GM_addStyle(`
	.add-red-time {display: flex; justify-content: center; align-items: center; width: 100%; font-size: 20px; font-weight: bold; color: red;}
  	.add-blue-time {display: flex; justify-content: center; align-items: center; width: 100%; font-size: 20px; font-weight: bold; color: blue;}
`)

var a = date.toLocaleTimeString('en-US', {timeZone: 'EST'})
var red = a.add-red-time;

var b = date.toLocaleTimeString('en-US', {timeZone: 'GMT'})
var blue = b.add-blue-time;

const target = document.createElement('time')
target.classList.add('header-bottom-text', 'blue "|" red')

document.querySelector('.header-wrapper-bottom').appendChild(target)

const update = () => target.textContent = display()

setInterval(update, 1000)
update()
