GM_addStyle(`
	.add-red-time {display: flex; justify-content: center; align-items: center; width: 100%; font-size: 18px; font-weight: bold; color: red;}
  .add-blue-time {display: flex; justify-content: center; align-items: center; width: 100%; font-size: 18px; font-weight: bold; color: blue;}
`)

var a = date.toLocaleTimeString('en-US', {timeZone: 'EST'})
var red = a.add-red-time;
var b = date.toLocaleTimeString('en-US', {timeZone: 'GMT'})
var blue = b.add-blue-time;
